<li class="list-group-item">
  <div class="row d-flex flex-wrap position-relative justify-content-between">
    <div class="d-flex flex-row flex-grow-1 justify-content-between w-100 row col-md-4">
      <div class="w-50 col-md-12 col-lg-6 library" data-sort-library="<%= h illiad_request.sort_key(:library) %>">
        <% if illiad_request.ready_for_pickup? %>
          <span class="text-ready">
            <%= sul_icon 'sharp-check_circle-24px' %>
            <span class="d-md-none">Pick up at </span><%= pickup_location_name(illiad_request.pickup_library) %>
          </span>
        <% else %>
          <span class="d-md-none">Deliver to </span><%= pickup_location_name(illiad_request.pickup_library) %>
        <% end %>

      </div>
      <% if illiad_request.expiration_date %>
        <div class="w-50 col-md-12 col-lg-6 text-right text-md-left date" data-sort-date="<%= h illiad_request.sort_key(:date) %>">
          <span class="d-inline d-md-none mr-2">by</span>
          <%= l(illiad_request.expiration_date, format: :short) %>
        </div>
      <% end %>
    </div>
    <div class="order-1 order-md-1 col-10 col-md-5 align-items-baseline">
      <h3 class="clamp-3 record-title title text-reset" data-sort-title="<%= h illiad_request.sort_key(:title) %>"><%= illiad_request.title %></h3>
    </div>
    <div class="order-3 order-md-2 d-flex flex-row flex-grow-1 row col-md-3">
      <div class="w-50 col-md-12 col-lg-6 clamp-1 author" data-sort-author="<%= h illiad_request.sort_key(:author) %>"><%= illiad_request.author %></div>
      <div class="w-50 col-md-12 col-lg-6 call_number" data-sort-call_number="<%= h illiad_request.sort_key(:call_number) %>"><%= illiad_request.call_number %></div>
    </div>
    <button class="col-2 col-md order-2 order-md-3 btn collapsed stretched-link position-static" type="button" data-toggle="collapse" data-target="#collapseDetails-<%= illiad_request.key.parameterize %>" aria-expanded="false" aria-controls="collapseDetails-<%= illiad_request.key.parameterize %>">
      <span class="expand-icon"><%= sul_icon :'sharp-add-24px' %><span class="sr-only">Expand</span></span>
      <span class="collapse-icon"><%= sul_icon :'sharp-remove-24px' %><span class="sr-only">Collapse</span></span>
    </button>
  </div>



 <div class="collapse w-100" id="collapseDetails-<%= illiad_request.key.parameterize %>">
    <div class="row mb-0">
      <div class="col-11 offset-1 col-md-10 offset-md-2">
        <% if patron.can_modify_requests? %>
          <a href='https://sulils.stanford.edu'>Manage this request in your ILL account</a>
        <% end %>
      </div>
    </div>
    <dl class="row mb-0">
      <% if params[:group] %>
        <dt class="col-3 offset-1 col-md-2 offset-md-2">Borrower:</dt>
        <dd class="col-8"><%= patron.group.member_name(illiad_request.patron_key) %></dd>
      <% end %>
      <% if illiad_request.placed_date %>
        <dt class="col-3 offset-1 col-md-2 offset-md-2">Requested:</dt>
        <dd class="col-8"><%= l(illiad_request.placed_date, format: :short) %></dd>
      <% end %>
      <%if false %>
        <dt class="col-3 offset-1 col-md-2 offset-md-2">Waitlist position:</dt>
        <dd class="col-8"><%= request.waitlist_position %></dd>
      <% end %>
      <dt class="col-3 offset-1 col-md-2 offset-md-2">Source:</dt>
      <dd class="col-8">Interlibrary Loan</dd>
    </dl>
  </div>


</li>
